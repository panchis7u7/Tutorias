<Page x:ConnectionId='1'
    x:Class="Sistema_Gestor_de_Tutorias.Pagina_Consultas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sistema_Gestor_de_Tutorias"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:data="using:System.Data"
    mc:Ignorable="d"
                        
    Background="Transparent">

    <Grid Background="Transparent">
        <RelativePanel>
            <ListView x:ConnectionId='2' Name="InventoryList"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  Margin="20">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"  Background="{ThemeResource SystemControlAcrylicWindowBrush}">
                            <TextBlock Text="ID" Padding="0 10 0 10" Margin="8,0" Width="50" Foreground="White"  HorizontalAlignment="Center"/>
                            <TextBlock Text="Nombre" Width="200" Padding="0 10 0 10" Foreground="White" HorizontalAlignment="Center" />
                            <TextBlock Text="Apellidos" Width="200" Padding="0 10 0 10" Foreground="White"  HorizontalAlignment="Center"/>
                            <TextBlock Text="Semestre" Width="80" Padding="0 10 0 10" Foreground="White"  HorizontalAlignment="Center"/>
                            <TextBlock Text="Carrera" Width="80" Padding="0 10 0 10" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate                           >
                        <StackPanel x:ConnectionId='5' Orientation="Horizontal" >
                            <TextBlock x:ConnectionId='6' Name="Id"
                                                             
                                    Width="50" />
                            <TextBlock x:ConnectionId='7' Name="Nombre"
                                                          
                                    Width="200" />
                            <TextBlock x:ConnectionId='8'                          
                                   Width="200" />
                            <TextBlock x:ConnectionId='9'                         
                                   Width="80" />
                            <TextBlock x:ConnectionId='10'                        
                                   Width="80" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativePanel>
    </Grid>
</Page>

